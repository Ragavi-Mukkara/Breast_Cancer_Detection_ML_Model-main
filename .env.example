# =============================
# Flask Configuration
# =============================
FLASK_APP=run.py  # Entry point for Flask app
FLASK_ENV=development  # Change to 'production' in production
SECRET_KEY=your-secret-key-here  # Replace with a strong secret key

# =============================
# Model Configuration
# =============================
MODEL_PATH=app/model/forest_model.pkl  # Path to ML model file
MODEL_VERSION=1.0.0

# =============================
# API Configuration
# =============================
API_TITLE=Breast Cancer Detection API
API_VERSION=1.0

# =============================
# Database Configuration
# =============================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=breast_cancer_db
DB_USER=postgres
DB_PASSWORD=your_password  # Replace with your actual DB password

# =============================
# Logging Configuration (Optional)
# =============================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=app.log

# =============================
# Other Settings (Optional)
# =============================
DEBUG=True
